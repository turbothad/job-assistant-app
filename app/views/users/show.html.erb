<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Profile</h1>
      <span class="bg-anthropic-orange text-white px-3 py-1 rounded-full text-sm">
        Member since <%= @user.created_at.strftime("%B %Y") %>
      </span>
    </div>
    
    <div class="grid md:grid-cols-2 gap-6">
      <!-- User Info -->
      <div>
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Personal Information</h2>
        <div class="space-y-3">
          <div>
            <span class="text-gray-600">Name:</span>
            <span class="font-medium ml-2"><%= @user.full_name %></span>
          </div>
          <div>
            <span class="text-gray-600">Email:</span>
            <span class="font-medium ml-2"><%= @user.email %></span>
          </div>
        </div>
      </div>
      
      <!-- Quick Actions -->
      <div>
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Quick Actions</h2>
        <div class="space-y-3">
          <%= link_to chat_path, 
              class: "block bg-anthropic-orange text-white px-4 py-2 rounded-md hover:bg-orange-600 text-center" do %>
            ü§ñ Chat with AI Assistant
          <% end %>
          
          <a href="#" class="block bg-gray-100 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-200 text-center">
            üìä View Applied Jobs
          </a>
          
          <a href="#" class="block bg-gray-100 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-200 text-center">
            üîç Browse Job Listings
          </a>
        </div>
      </div>
    </div>
    
    <!-- Stats (placeholder for future implementation) -->
    <div class="mt-8 border-t pt-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Your Statistics</h2>
      <div class="grid grid-cols-3 gap-4 text-center">
        <div class="bg-gray-50 p-4 rounded-lg">
          <div class="text-2xl font-bold text-anthropic-orange">0</div>
          <div class="text-sm text-gray-600">Jobs Applied</div>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg">
          <div class="text-2xl font-bold text-anthropic-orange">0</div>
          <div class="text-sm text-gray-600">Chat Sessions</div>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg">
          <div class="text-2xl font-bold text-anthropic-orange">0</div>
          <div class="text-sm text-gray-600">Jobs Saved</div>
        </div>
      </div>
    </div>
  </div>
</div>
