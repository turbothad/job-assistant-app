<div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Sign Up</h2>
  
  <%= form_with model: @user, url: signup_path, local: true, class: "space-y-4" do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h4 class="font-medium">Please fix the following errors:</h4>
        <ul class="mt-2 text-sm">
          <% @user.errors.full_messages.each do |message| %>
            <li>â€¢ <%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div>
      <%= form.label :first_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :first_name, required: true,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-anthropic-orange focus:border-anthropic-orange" %>
    </div>
    
    <div>
      <%= form.label :last_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :last_name, required: true,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-anthropic-orange focus:border-anthropic-orange" %>
    </div>
    
    <div>
      <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.email_field :email, required: true,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-anthropic-orange focus:border-anthropic-orange" %>
    </div>
    
    <div>
      <%= form.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.password_field :password, required: true,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-anthropic-orange focus:border-anthropic-orange" %>
    </div>
    
    <div>
      <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.password_field :password_confirmation, required: true,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-anthropic-orange focus:border-anthropic-orange" %>
    </div>
    
    <div>
      <%= form.submit "Sign Up", 
          class: "w-full bg-anthropic-orange text-white py-2 px-4 rounded-md hover:bg-orange-600 focus:ring-2 focus:ring-anthropic-orange focus:ring-offset-2 font-medium" %>
    </div>
  <% end %>
  
  <div class="mt-6 text-center">
    <p class="text-sm text-gray-600">
      Already have an account? 
      <%= link_to "Sign in", login_path, class: "text-anthropic-orange hover:text-orange-600 font-medium" %>
    </p>
  </div>
</div>
